model Mae {
  cpfMae                   Int     @id @default(autoincrement())
  nome                 String
  data_nascimento      String?
  endereco             String?
  telefone             String?
  bebes                Bebe[]
}

model Medico {
  crm              Int     @id @default(autoincrement())
  nome             String
  endereco         String?
  especialidade    String
  bebes            Bebe[]
}

model Bebe {
  cpfBebe      Int     @id @default(autoincrement())
  nome                     String
  data_nascimento          String
  altura                   Float?
  peso                     Float?
  medico                   Medico @relation(fields: [cpfBebe], references: [crm])
  mae                      Mae    @relation(fields: [cpfBebe], references: [cpfMae])
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
