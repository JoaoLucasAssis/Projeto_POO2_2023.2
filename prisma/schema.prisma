// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

model Mae {
  id    Int     @id @default(autoincrement())
  name  String?
  telefone String?
  endereco String?
  data     Date?
}

model Medico {
  crm           String     @id @default(autoincrement())
  nome           String?
  endereco      String?
  especialidade String?

  authorId  Int
}

model Bebe {
  id      Int     @id @default(autoincrement())
  name    String?
  data    Date?
  altura  Float?
  peso    Float?
  medico  Medico
  mae     Mae
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
