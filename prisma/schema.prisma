// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

model Mae {
  id    Int     @id @default(autoincrement())
  name  String?
  telefone String?
  endereco String?
  data     String?
}

model Medico {
  crm            Int     @id @default(autoincrement())
  nome           String?
  endereco      String?
  especialidade String?
}

model Bebe {
  id      Int     @id @default(autoincrement())
  name    String?
  data    String?
  altura  Float?
  peso    Float?
  medico  Medico @relation(fields: [medicoCrm], references: [crm])
  medicoCrm  Int
  mae     Mae    @relation(fields: [maeId], references: [id])
  maeId   Int    
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
