model Mae {
  RG       Int     @id @default(autoincrement())
  name     String
  data     String?
  endereco String?
  telefone String?
  bebes Bebe[]
}

model Medico {
  crm           Int     @id @default(autoincrement())
  nome          String?
  telefone      String?
  especialidade String?
  bebes Bebe[]
}

model Bebe {
  certidao_nascimento      Int     @id @default(autoincrement())
  name    String?
  data    String?
  altura  Float?
  peso    Float?
  medico  Medico @relation(fields: [certidao_nascimento], references: [crm])
  mae     Mae    @relation(fields: [certidao_nascimento], references: [RG])
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
